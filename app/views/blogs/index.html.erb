<h1>Blogs</h1>

<% @blogs.each do |blog| %>
  <div class="my-3">
    <h2>
      <%= link_to blog.title, blog %>
      <small class="pl-1">
        by <em><%= blog.user.name %></em>
      </small>
    </h2>
  </div>
<% end %>

<%= link_to 'New Blog', new_blog_path, class: "btn btn-outline-primary my-2" %>
