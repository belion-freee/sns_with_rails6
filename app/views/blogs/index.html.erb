<h1>Blogs</h1>

<%= form_tag blogs_path, method: :get do %>
  <%= text_field_tag :q %>

  <%= submit_tag "Search", class: "btn btn-outline-info btn-sm" %>
<% end %>

<% @blogs.each do |blog| %>
  <div class="my-3">
    <%= img_tag(blog) %>
    <%= link_to blog.title, blog, class: 'h2' %>
    <small class="pl-1">
      by <em><%= blog.user.name %></em>
    </small>
  </div>
<% end %>

<%= link_to 'New Blog', new_blog_path, class: "btn btn-outline-primary my-2" %>
